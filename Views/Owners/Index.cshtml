@model IEnumerable<CarSystem_TSP_Project.Models.Owner>

@{
    ViewData["Title"] = "Owners";
}

<h1>Owners in the system</h1>

<p>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarsBought)
            </th>
            <th>
                   <a asp-action="AddOrEdit" class="btn btn-sm btn-success">
                    <i class="fa-solid fa-plus"></i>New</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarsBought)
            </td>
            <td>
                 <div class="btn-group btn-group-sm">

                <a asp-action="AddOrEdit" asp-route-id="@item.OwnerId" class="btn btn-warning">
                    <i class="fa-solid fa-pen-to-square">Edit</i>
                    </a> |
             
                <a asp-action="Delete" asp-route-id="@item.OwnerId" class="btn btn-danger">
                    <i class="far fa-trash-alt"></i>
                    Delete</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
