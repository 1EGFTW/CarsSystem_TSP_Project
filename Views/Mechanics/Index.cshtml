@model IEnumerable<CarSystem_TSP_Project.Models.Mechanic>
<!DOCTYPE html>
<head>
    <script src="https://kit.fontawesome.com/4b4c808239.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/index-pages.css" asp-append-version="true" />
</head>

<body>
@{
    ViewData["Title"] = "Mechanics";
}
    <div class="wrapper">
        <h1>Mechanics in the system</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th class="btn-align">
                        <a asp-action="AddOrEdit" class="btn btn-sm btn-success">
                            <i class="fa-solid fa-plus"></i>New</a>
                    </th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                         <div class="btn-group btn-group-sm">

                        <a asp-action="AddOrEdit" asp-route-id="@item.MechanicId" class="btn btn-warning">
                            <i class="fa-solid fa-pen-to-square">Edit</i>
                            </a> |
             
                        <a asp-action="Delete" asp-route-id="@item.MechanicId" class="btn btn-danger">
                            <i class="far fa-trash-alt"></i>
                            Delete</a>
                        </div>
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
</body>